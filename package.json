{
  "name": "hey",
  "version": "0.0.0",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "build": "pnpm --recursive --parallel run build",
    "build:mainnet": "cross-env LENS_NETWORK=mainnet pnpm build",
    "build:testnet": "cross-env LENS_NETWORK=testnet pnpm build",
    "codegen": "pnpm --recursive --parallel run codegen",
    "dep:check": "pnpm dlx sherif@latest",
    "dep:fix": "pnpm dlx sherif@latest --fix",
    "dev": "pnpm --filter @slice/web dev",
    "dev:mainnet": "cross-env LENS_NETWORK=mainnet pnpm dev",
    "dev:testnet": "cross-env LENS_NETWORK=testnet pnpm dev",
    "start": "pnpm --recursive --parallel run start",
    "sync": "node ./script/sync-public.mjs",
    "typecheck": "pnpm --recursive --parallel run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.10.1",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "tsconfig-paths": "^4.2.0"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=18.x <=22.x"
  },
  "pnpm": {
    "overrides": {
      "ox": "0.9.6"
    }
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.1",
    "@tanstack/react-query-devtools": "^5.90.2",
    "zustand": "^5.0.8"
  }
}
